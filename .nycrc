{
  "extends": "@istanbuljs/nyc-config-typescript",
  "all": true,
  "check-coverage": true,
  "reporter": [
    "text",
    "text-summary",
    "json",
    "html",
    "lcov"
  ],
  "report-dir": "./coverage",
  "include": [
    "src/**/*.{js,jsx,ts,tsx}"
  ],
  "exclude": [
    "**/*.d.ts",
    "**/*.test.{js,jsx,ts,tsx}",
    "**/*.spec.{js,jsx,ts,tsx}",
    "**/e2e/**",
    "**/__tests__/**",
    "**/node_modules/**"
  ],
  "statements": 80,
  "branches": 70,
  "functions": 80,
  "lines": 80
} 